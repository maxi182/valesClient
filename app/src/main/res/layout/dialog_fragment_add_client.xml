<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/general_margin_very_large"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/general_margin">


        <TextView
            android:id="@+id/client_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            tools:text="Cod cliente:" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cant_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Nombre Cliente"
            android:textColorHint="@color/zh_dark_slate_gray_alpha_50">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/general_margin"
                android:layout_marginTop="@dimen/general_margin_medium"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_person_add"
                android:drawablePadding="10dp"
                android:imeOptions="actionGo"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:textAlignment="center"
                android:textAppearance="@style/AppTheme.Text.LatoBold.white.14.67"
                android:translationY="@dimen/sign_up_edit_text_translation" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/general_margin"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/cancel_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/general_margin"
                android:layout_weight=".5"
                android:background="@drawable/textview_square_border"
                android:gravity="center"
                android:padding="@dimen/general_margin"
                android:text="Cancelar"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/accept_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/textview_square_border"
                android:gravity="center"
                android:padding="@dimen/general_margin"
                android:text="Aceptar"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/zh_white</item>

    </style>


    <!-- Here you can define a default characteristics or elements that will be inherited by all
    text styles-->
    <style name="AppTheme.Text.BaseFont" parent="TextAppearance.AppCompat">
        <item name="fontPath">@string/font_system_font</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Text.LatoBold" parent="AppTheme.Text.BaseFont">
        <item name="fontPath">@string/font_lato_bold</item>
    </style>


    <style name="AppTheme.Button"></style>


    <style name="AppTheme.Button.Large" parent="AppTheme.Button">
        <item name="android:layout_marginLeft">@dimen/general_margin</item>
        <item name="android:layout_marginRight">@dimen/general_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/general_margin</item>
        <item name="android:paddingBottom">@dimen/general_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Text.LatoBold.darkslategray" parent="AppTheme.Text.LatoBold">
        <item name="android:textColor">@color/zh_dark_slate_gray</item>
    </style>

    <style name="AppTheme.Button.Large.LightGreen" parent="AppTheme.Button.Large">
        <item name="android:background">@drawable/button_lighter_green_background</item>
        <item name="android:textAppearance">@style/AppTheme.Text.LatoBold.darkgray.14.67</item>

    </style>

    <style name="AppTheme.Text.LatoBold.darkgray" parent="AppTheme.Text.LatoBold">
        <item name="android:textColor">@color/zh_dark_grey</item>
    </style>

    <style name="AppTheme.Button.Large.DarkSlategray" parent="AppTheme.Button.Large">
        <item name="android:background">@drawable/button_darkslategray_background_selector</item>
        <item name="android:textAppearance">@style/AppTheme.Text.LatoBold.white.14.67</item>
        <item name="android:textColor">@drawable/button_darkslategray_text_color_selector</item>
    </style>

    <style name="AppTheme.Text.LatoBold.darkslategray.14.67" parent="AppTheme.Text.LatoBold.darkslategray">
        <item name="android:textSize">14.67sp</item>
    </style>


    <style name="AppTheme.Text.LatoBold.darkgray.14.67" parent="AppTheme.Text.LatoBold.darkgray">
        <item name="android:textSize">14.67sp</item>
    </style>

    <style name="AppTheme.Text.LatoBold.white" parent="AppTheme.Text.LatoBold">
        <item name="android:textColor">@color/zh_white</item>
    </style>

    <style name="AppTheme.Text.LatoBold.white.14.67" parent="AppTheme.Text.LatoBold.white">
        <item name="android:textSize">14.67sp</item>
    </style>



</resources>
